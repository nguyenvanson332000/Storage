      <div class="carousel-item active">
        <img class="d-block img-fluid" src="/assets/anh1.png" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block img-fluid" src="/assets/anh2.png" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block img-fluid" src="/assets/anh3.png" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">home previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">home next</span>
    </a>
  </div>

